rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // REGLAS PERMISIVAS PARA DESARROLLO/TESTING
    // ⚠️ CAMBIAR A PRODUCCIÓN DESPUÉS
    // ==========================================
    
    // Colección users - Solo lectura para admins, escritura para owner
    match /users/{userId} {
      // Cualquier usuario autenticado puede leer todos los usuarios
      // (Necesario para que el panel admin funcione)
      allow read: if request.auth != null;
      
      // Solo el dueño de la cuenta puede escribir sus propios datos
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // Permitir crear nuevos usuarios durante registro
      allow create: if request.auth != null;
    }
    
    // Colección membership_history - Solo lectura para admins
    match /membership_history/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Para otras colecciones (si las tienes)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
